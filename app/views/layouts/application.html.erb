<!DOCTYPE html>
<html>
  <head>
    <title>AplikacjaWebowa</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      Zalogowany jako <%= current_player.email %>
      <%= link_to "Profil", current_player %>
      <%= link_to "Wyloguj", logout_path, method: :get %>
    <% else %>
      <%= link_to "Zaloguj", login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>